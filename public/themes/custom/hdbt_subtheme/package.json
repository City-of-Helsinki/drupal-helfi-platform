{
  "name": "hdbt_subtheme",
  "version": "1.2.0",
  "description": "Theme builder configuration for HDBT subtheme",
  "author": "Druid",
  "license": "MIT",
  "repository": "github:City-of-Helsinki/drupal-hel-platform",
  "scripts": {
    "dev": "node theme-builder.mjs --watch --dev",
    "build": "npm run format:js && npm run lint -s && node theme-builder.mjs",
    "preinstall": "npx update-browserslist-db@latest",
    "postinstall": "npm --prefix ../../contrib/hdbt install --no-audit --progress=false",
    "lint:scss": "npx postcss \"src/scss/**/*.scss\" --syntax postcss-scss --use css-declaration-sorter --replace --no-map && npm run lint:stylelint",
    "lint:stylelint": "npx stylelint \"src/scss/**/*.scss\" --config ../../contrib/hdbt/theme-builder/.stylelintrc.yaml --formatter --fix",
    "lint:js": "biome lint src/js/",
    "format:js": "biome format --write src/js/",
    "lint": "npm-run-all --parallel lint:scss lint:js -s"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.4",
    "@hdbt/theme-builder": "file:../../contrib/hdbt/theme-builder",
    "hds-design-tokens": "^2.0.0",
    "npm-run-all2": "^8.0.4"
  },
  "browserslist": [
    "last 3 major versions",
    "> 1%",
    "not dead"
  ]
}
