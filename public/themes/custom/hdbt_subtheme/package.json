{
  "name": "hdbt_subtheme",
  "version": "1.0.0",
  "description": "Webpack configuration for HDBT Subtheme",
  "author": "Druid",
  "license": "MIT",
  "repository": "github:City-of-Helsinki/drupal-hel-platform",
  "scripts": {
    "dev": "webpack --progress --mode=development --config  webpack.config.js --watch",
    "build": "webpack --progress --mode=production --config webpack.config.js",
    "preinstall": "npx browserslist@latest --update-db",
    "lint": "lint-staged",
    "lint:js": "eslint --fix src/"
  },
  "dependencies": {
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "^7.23.2",
    "@nuxt/friendly-errors-webpack-plugin": "^2.5.1",
    "@sideway/address": "^5.0.0",
    "@sideway/formula": "^3.0.1",
    "@sideway/pinpoint": "^2.0.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "breakpoint-sass": "^3.0.0",
    "chokidar": "^3.5.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-declaration-sorter": "^6.0.3",
    "css-loader": "^6.5.0",
    "es6-promise": "^4.1.1",
    "eslint": "^8.0.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-import": "^2.25.3",
    "expose-loader": "^4.0.0",
    "glob": "^8.0.0",
    "hds-design-tokens": "^1.7.1",
    "html-loader": "^4.0.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^8.0.0",
    "joi": "^17.4.0",
    "json5": "^2.2.3",
    "lint-staged": "^13.0.0",
    "md5": "^2.3.0",
    "mini-css-extract-plugin": "^2.0.0",
    "normalize.css": "^8.0.1",
    "postcss": "^8.3.0",
    "postcss-cli": "^10.0.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-easy-import": "^4.0.0",
    "postcss-import": "^15.0.0",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-loader": "^7.0.0",
    "postcss-nested": "^6.0.0",
    "postcss-nesting": "^10.0.2",
    "postcss-preset-env": "^7.4.3",
    "postcss-scss": "^4.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "sass": "^1.43.4",
    "sass-loader": "^13.0.0",
    "svg-inline-loader": "^0.8.0",
    "svg-sprite": "^2.0",
    "webpack": "^5.56.2",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.0.0",
    "webpack-notifier": "^1.14.0",
    "webpack-remove-empty-scripts": "^1.0.0"
  },
  "lint-staged": {
    "src/scss/**/*.scss": [
      "postcss *.scss --parser postcss-scss --syntax postcss-scss --use css-declaration-sorter --replace --no-map"
    ],
    "src/js/**/*.js": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "last 3 major versions",
    "not dead"
  ],
  "devDependencies": {
    "js-yaml": "^4.1.0",
    "stylelint": "^14.8.5",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0"
  }
}
